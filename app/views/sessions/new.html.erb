<h1>Sign In</h1>

<%= form_with url: sign_in_path do |f| %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'email@example.com'  %>
  </div>
  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <%= link_to "Forgot your paswword??", password_reset_path %>
  </div>
  <div class="mb-3">
    <%= f.submit 'Sign In', class: 'btn btn-success' %>

  </div>
<% end %>
